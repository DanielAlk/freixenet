.timeline { background: url(<%= asset_path 'timeline.png' %>) repeat-x center #ecebe6; height: 670px; width: 1199px; margin:0 auto; }
.timeline-item {float: left;height: 100%;}
.timeline-item-content {
	height: 130px; border-left: 1px solid; padding: 4px;
	-webkit-transition: height 300ms ease-out, padding-top 300ms ease-out;
	-moz-transition: height 300ms ease-out, padding-top 300ms ease-out;
	-ms-transition: height 300ms ease-out, padding-top 300ms ease-out;
	-o-transition: height 300ms ease-out, padding-top 300ms ease-out;
	transition: height 300ms ease-out, padding-top 300ms ease-out;
}
.timeline-item-title { text-transform: uppercase; font-size: 14px; margin-top: 0; white-space: nowrap;}
.timeline-item-content>img { width: 90px; height: auto; margin-bottom: 5px; display: block; }
.timeline-item-content>span { font-size: 18px; }
.timeline-item-content>p { margin-bottom: 5px; display: none; width: 600px;}
.timeline-item-content>p.sm { width: 400px;}
.timeline-item-content>p.lg { width: 850px;}

.timeline-item-content { position: absolute; }

.timeline-upper { position: relative; width: 970px; height: 310px; margin: 0 auto 50px; }
.timeline-upper .timeline-item-content { bottom: 0; }
.timeline-upper .timeline-item { width: 25%; }
.timeline-lower { position: relative; width: 1199px; height: 310px; margin: 0 auto 50px; }
.timeline-lower .timeline-item-content { top: 0; height: auto; padding-top: 20px; padding-bottom: 0; }
.timeline-lower .timeline-item { width: 20%; }
.timeline-lower .timeline-item-content>img { margin-bottom: 0; width: 110px; }
.timeline-lower .timeline-item-content>p { margin-bottom: 0; margin-top: 5px; }
.timeline-lower .timeline-item-content>span { font-size: 20px;}
.timeline-lower .timeline-item-title { margin-top: 5px; font-size: 16px; }


.timeline-item-content:hover, .timeline-item-content:focus { outline: 0; height: 350px; }
.timeline-item-content:hover>p, .timeline-item-content:focus>p { display: block; }
.timeline-item-content:hover .caret, .timeline-item-content:focus .caret {border-top: none; border-bottom: 6px solid; color: #a8974a;}

.timeline-item:last-child .timeline-item-content:hover, .timeline-item:last-child .timeline-item-content:focus { outline: 0; height: 270px; }
.timeline-item:last-child p { position: absolute;top: 0;right: 100%; margin: 30px 5px 0;text-align: right; }
.timeline-lower .timeline-item:last-child p { top: auto; bottom:0; margin-top: 0;}

.timeline-lower .timeline-item-content:hover, .timeline-lower .timeline-item-content:focus { outline: 0; height: auto !important; padding-top: 150px; }

.timeline-lower:before, .timeline-lower:after { content: ''; display: block; position: absolute; top: -55px; left: -3px; width: 10px; height: 50px; background-color: #ECEBE6; -moz-transform: rotate(1deg); -webkit-transform: rotate(1deg); -o-transform: rotate(1deg); -ms-transform: rotate(1deg); transform: rotate(21deg); }
.timeline-lower:after { left: auto;right: 0;top: -45px; }