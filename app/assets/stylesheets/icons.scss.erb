.icon { display: inline-block; background-repeat: no-repeat; background-size: auto 100%; min-height: 1em; }
.icon-facebook { background-image: url(<%= asset_path 'icon-facebook.png' %>); width: 0.5em; }
.icon-media { background-image: url(<%= asset_path 'icon-media.png' %>); width: 1.3em; }
.icon-world { background-image: url(<%= asset_path 'icon-world.png' %>); width: 2.3em; }
a:hover>.icon-facebook, a.active>.icon-facebook { background-image: url(<%= asset_path 'icon-facebook-hover.png' %>); }
a:hover>.icon-media, a.active>.icon-media { background-image: url(<%= asset_path 'icon-media-hover.png' %>); }
a:hover>.icon-world, a.active>.icon-world { background-image: url(<%= asset_path 'icon-world-hover.png' %>); }

.icon-facebook-round { background-image: url(<%= asset_path 'icon-facebook.png' %>); background-color: #000; width: 32px; height: 32px; background-position: center center; background-size: auto 20px; border-radius: 50%; }

.icon-chevron-left { background-image: url(<%= asset_path 'icon-chevron-left.png' %>); width: .6em; }
.icon-chevron-right { background-image: url(<%= asset_path 'icon-chevron-right.png' %>); width: .6em; }

.icon-wine-glass { width: 35px; height: auto; margin-right: 20px; margin-top: -5px; }