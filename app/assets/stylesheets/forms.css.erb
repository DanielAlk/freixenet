input.form-control::-webkit-input-placeholder, textarea.form-control::-webkit-input-placeholder { color:#000; }
input.form-control::-moz-placeholder, textarea.form-control::-moz-placeholder { color:#000; }
input.form-control:-ms-input-placeholder, textarea.form-control:-ms-input-placeholder { color:#000; }
input.form-control:-moz-placeholder, textarea.form-control:-moz-placeholder { color:#000; }

.form-control { background-color: #efefef; border-radius: 0; border-color: #a1a1a1; color: #000; }
select.form-control, button.form-control { width: auto; }
textarea.form-control { resize: none; }

label.error {font-weight: bold; margin: 0; color: red;}

.form-group.dropdowns-3:before, .form-group.dropdowns-3:after { content: ' '; display: table; }
.form-group.dropdowns-3:after { clear: both; }
.form-group.dropdowns-3 div.dropdown { float: left; }
.form-group.dropdowns-3 .dropdown-menu { max-height: 350px; overflow: scroll; }