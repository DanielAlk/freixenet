<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">My Account <span class="pull-right"><%= current_admin.email %></span></h3>
	</div>
	<div class="panel-body">
		<%= link_to 'Editar usuario', edit_admin_registration_path, class: 'btn btn-default btn-block' %>
		<%= link_to 'Sign out', destroy_admin_session_path, method: 'delete', class: 'btn btn-danger btn-block' %>
		<%= link_to 'Borrar cuenta', admin_registration_path, method: 'delete', data: { confirm: 'Are you sure?' }, class: 'btn btn-warning btn-block' unless current_admin.administrator? %>
	</div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Admin Database</h3>
  </div>
  <div class="panel-body">
  	<%= link_to 'Ver Productos', products_path, class: 'btn btn-block btn-warning' %>
  	<%= link_to 'Nuevo Producto', new_product_path, class: 'btn btn-block btn-success' %>
  	<%= link_to 'Ver Novedades', articles_path, class: 'btn btn-block btn-warning' %>
  	<%= link_to 'Nueva Novedad', new_article_path, class: 'btn btn-block btn-success' %>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Visitas</h3>
  </div>
  <div class="panel-body">
  	<%= link_to 'Ver Contactos', contacts_path, class: 'btn btn-block btn-warning' %>
  </div>
</div>
<% if current_admin.administrator? %>
	<div class="panel panel-default">
	  <div class="panel-heading">
	    <h3 class="panel-title">Admin Accounts</h3>
	  </div>
	  <div class="panel-body">
			<%= link_to 'Crear nuevo usuario admin', new_admin_registration_path, class: 'btn btn-success btn-block' %>
			<%= link_to 'Listar usuarios admin', admin_list_path, class: 'btn btn-default btn-block' %>
		</div>
	</div>
<% end %>