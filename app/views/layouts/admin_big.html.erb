<!DOCTYPE html>
<html lang="es">
<head>
	<%= render 'layouts/head' %>
  <%= csrf_meta_tags %>
</head>
<body class="admin">
<%= render 'layouts/navigation' %>
<section class="admin">
  <div class="container">
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2">
        <%= yield %>
      </div>
    </div>
  </div>
</section>
<%= render 'layouts/footer' %>
<%= render 'modals/notice' %>
<script>
  $(function() {
    Utils.init();
    <% if content_for? :extra_js %>
      <%= yield :extra_js %>
    <% end %>
  });
</script>
</body>
</html>
