<!DOCTYPE html>
<html>
<head>
	<%= render 'layouts/head' %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= render 'layouts/navigation' %>
<%= yield %>
<%= render 'layouts/footer' %>
<script>
  $(function() {
    <% if content_for? :extra_js %>
      <%= yield :extra_js %>
    <% end %>
    <% if notice.present? %>
      alert('<%= notice %>');
    <% end %>
    <% if alert.present? %>
      alert('<%= alert %>');
    <% end %>
  });
</script>
</body>
</html>
